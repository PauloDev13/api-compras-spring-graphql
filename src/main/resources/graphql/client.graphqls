type Client {
    id: ID!
    name: String!
    email: String!
}

input InputClient {
    name: String
    email: String
}

extend type Query {
    client(id: ID!): Client
    clients: [Client]!
}

extend type Mutation {
    saveClient(client: InputClient!): Client!
    updateClient(id: ID!, client: InputClient!): Client
    deleteClient(id: ID!): Boolean!
}