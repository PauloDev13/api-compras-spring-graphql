type Product {
  id: ID!
  name: String!
  price: Float!
}

input ProductInput {
  name: String!
  price: Float!
}

extend type Query {
  products: [Product]!
  product(id: ID!): Product
}

extend type Mutation {
  saveProduct(product: ProductInput!): Product!
  updateProduct(id: ID!, product: ProductInput!): Product!
  deleteProduct(id: ID!) : Boolean!
}