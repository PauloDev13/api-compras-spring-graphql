type Purchase {
  id: ID!
  quantity: Int!
  status: String!
  client: Client
  product: Product
}

input PurchaseInput {
  quantity: Int!
  status: String!
  clientId: ID!
  productId: ID!
}

extend type Query {
  purchase(id: ID!): Purchase
  purchases(page: Int = 0, size: Int = 2): [Purchase]!
}

extend type Mutation {
  savePurchase(purchase: PurchaseInput!): Purchase!
  deletePurchase(id: ID!): Boolean!
}